{
    "image": "quay.io/mickume/codespaces:latest",
    "remoteUser": "user",
    "customizations": {
        "vscode": {
            "settings": {
                "cmake.sourceDirectory": "${workspaceFolder}/src",
                "cmake.buildDirectory": "${workspaceFolder}/build"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ]
        }
    },
    "postCreateCommand": "/home/tooling/.scripts/init-workspace"
}
