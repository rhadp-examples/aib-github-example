{
    "image": "quay.io/mickume/codespaces:latest",
    "remoteUser": "user",
    "customizations": {
        "vscode": {
            "settings": {
                "cmake.sourceDirectory": "${workspaceFolder}/src",
                "cmake.buildDirectory": "${workspaceFolder}/build"
            }
        }
    },
    "postCreateCommand": "/home/tooling/.scripts/init-workspace && .devcontainer/setup-workspace.sh"
}
